<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">
    <EditTextPreference
        android:defaultValue="@string/setting_query_default"
        android:inputType="textShortMessage"
        android:key="@string/setting_query_key"
        android:selectAllOnFocus="true"
        android:title="@string/setting_query_label" />

    <ListPreference
        android:defaultValue="Def value"
        android:entries="@array/settings_section_labels"
        android:entryValues="@array/setting_section_values"
        android:key="@string/setting_Tag_key"
        android:title="@string/setting_Tag_label" />

</PreferenceScreen>